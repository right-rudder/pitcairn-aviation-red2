<%= form_with(model: message, class: "font-thin") do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being sent:</h2>

      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, class: "" %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-neutral-400 focus:ring-neutral-400" %>
  </div>

  <div class="my-5">
    <%= form.label :email, class: "" %>
    <%= form.email_field :email, class: "block shadow rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-neutral-400 focus:ring-neutral-400" %>
  </div>

  <%= invisible_captcha :confirm_email, :message %>

  <div class="my-5">
    <%= form.label :phone, class: "" %>
    <%= form.text_field :phone, placeholder: "###-###-####", class: "placeholder:text-slate-300 block shadow rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-neutral-400 focus:ring-neutral-400" %>
  </div>

  <div class="my-5">
    <%= form.label "YOUR MESSAGE", class: "uppercase" %>
    <%= form.text_area :body, rows: 4, class: "block shadow rounded-md border border-slate-200 outline-none px-3 py-2 mt-2 w-full focus:border-neutral-400 focus:ring-neutral-400" %>
  </div>

  <%# if @show_checkbox_recaptcha %>
    <%#= recaptcha_tags %>
    <!--<div class="mb-10"></div>-->
  <%# else %>
    <%#= recaptcha_v3(action: 'message', site_key: ENV['RECAPTCHA_SITE_KEY']) %>
  <%# end %>

  <div class="inline">
    <%= form.submit "SEND MESSAGE", class: "btn-primary border border-white bg-red-600 hover:bg-red-500 text-xl text-white font-bold rounded-2xl" %>
  </div>
<% end %>
